<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/registrationFragmnet">

    <fragment
        android:id="@+id/registrationFragmnet"
        android:name="com.example.tinder20.fragments.RegistrationFragmnet"
        android:label="fragment_registration_fragmnet"
        tools:layout="@layout/fragment_registration_fragmnet" >
        <action
            android:id="@+id/action_registrationFragmnet_to_mainPage"
            app:destination="@id/mainPage" />
        <action
            android:id="@+id/action_registrationFragmnet_to_signIn2"
            app:destination="@id/signIn2" />
    </fragment>
    <fragment
        android:id="@+id/mainPage"
        android:name="com.example.tinder20.fragments.MainPage"
        android:label="fragment_main_page"
        tools:layout="@layout/fragment_main_page" />
    <fragment
        android:id="@+id/signIn2"
        android:name="com.example.tinder20.fragments.SignIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />
</navigation>